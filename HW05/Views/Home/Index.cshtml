@model List<HW05.Models.BooksViewModel>
@using HW05.Models;
@{
    ViewBag.Title = "Home Page";
}

<style type="text/css">
    /*For desktop*/
    @@media screen and (min-width:768px){

        .h2{
            color:aqua;
        }
    }
</style>

<body style="margin-left:-150px">
    <div>
        <h2 style="margin-top:50px; margin-bottom:30px">
            Books
        </h2>
    </div>

    <div class="dropdown-divider" style="margin-bottom:20px"></div>

    <!--Operation field-->
    <div>
        <form>
            <div class="form-row">
                <div class="col-lg-4">
                    <input type="text" class="form-control" placeholder="Search Book Name" style="width:250px" />
                </div>

                <!--Select book type dropdown-->
                <div class="col">
                    <select class="form-control">
                        <option selected>Select Type</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>

                </div>

                <!--Select author dropdown-->
                <div class="col">
                    <select class="form-control">
                        <option selected>Select Author</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>

                <!--Search button-->
                <div class="col">
                    <button type="button" class="btn btn-success" style="width:150px">Search</button>
                </div>

                <!--Clear button-->
                <div class="col">
                    <button type="button" class="btn btn-danger" style="width:150px">Clear</button>
                </div>
            </div>
        </form>
    </div>


    <!--Book table-->
    <div>
        <table class="table" style="margin-top:20px">
            <thead>
                <tr style="height:80px">
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Author</th>
                    <th scope="col">Type</th>
                    <th scope="col">Page Count</th>
                    <th scope="col">Points</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>

                @foreach (BooksViewModel book in Model)
                 {
                    <tr>
                        <td scope="row">@book.bookID</td>
                        <td>@book.bookName</td>
                        <td>None</td>
                        <td>None</td>
                        <td>@book.pageCount</td>
                        <td>@book.point</td>
                        <td>Out</td>
                        <td>
                            <button type="button" class="btn btn-primary">View</button>
                        </td>
                    </tr>
                 }

            </tbody>
        </table>
    </div>
</body>